[% IF id.defined %]
    [% IF id %]
        <h3>Update contractor</h3>
    [% ELSE %]
        <h3>Add new contractor</h3>
    [% END %]

    <form role="form" method="post">
        <input type="hidden" name="csrf_token" value="[% csrf_token %]">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
		    <input type="text" name="name" id="name" class="form-control" value="[% contractor.name %]">
                </div>
                <div class="form-group">
		    <button type="submit" name="submit" value="submit" class="btn btn-default">
			[% IF id %]
			    Update
			[% ELSE %]
			    Add
			[% END %]
		    </button>
                    [% IF id %]
                        <button type="submit" name="delete" value="submit" class="btn btn-primary">
                            Delete
                        </button>
                    [% END %]
                </div>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </form>

[% ELSE %]
    <h3>Contractors</h3>
    <p>
        <a href="/contractor/0" class="btn btn-default" role="button">Add new contractor</a>
    </p>
    [% IF contractors.size %]
	<table class="table table-striped">
	    <tr>
		<th>ID</th>
		<th>Name</th>
	    </tr>

	    [% FOR contractor IN contractors %]
	    <tr>
		<td class="col-sm-1"><a href="/contractor/[% contractor.id %]">[% contractor.id %]</a></td>
		<td class="col-sm-10">[% contractor.name | html %]</td>
	    </tr>
	    [% END %]
	</table> 
    [% ELSE %]
	<p>There are no existing contractors</p>
    [% END %]
[% END %]

